{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "func",
      "command": "host start",
      "problemMatcher": "$func-node-watch",
      "isBackground": true,
      "dependsOn": "bun build (functions)"
    },
    {
      "type": "shell",
      "label": "bun build (functions)",
      "command": "bun run build",
      "dependsOn": "bun install (functions)",
      "problemMatcher": "$tsc"
    },
    {
      "type": "shell",
      "label": "bun install (functions)",
      "command": "bun install"
    }
  ]
}
